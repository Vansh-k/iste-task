<%- include ("./partials/header") %>



<div id="home-main-section" class="">
  <div class="row no-gutters ">

    <div class="col-lg-6 left-section">
      <div class="grid-sol">

        <h3> So here is your grid</h3>

        <div class="grid-table">
          <div class="table-responsive">
            <table class="table">
              <%  for(i=1; i <= noOfGrid ; i++){  %>
              <tr>
                <%  for(j=1; j <= noOfGrid; j++){   %>
                <% var color = Math.floor(3*(Math.random())); %>
                <td style="background-color:<%= colorPref[color] %>;width:5px;height:5px" value="<%= colorPref[color] %>" name= "<%= i %> +","+<%= j %>" ></td>
                <% } %>
              </tr>
              <% } %>
            </table>
          </div>
        </div>

        <h5>You can download it for free!!</h5>
        <div class="download-btn">
          <a href="#"> <button class="btn download-button">Download</button></a>
        </div>
      </div>
    </div>

    <div class="col-lg-6 right-section ">

      <div class="title">
        <h2>Create Your Own Grid...</h2 </div>
        <div class="d-flex justify-content-center">
          <div class="grid-creator">

            <form action="/" method="POST">
              <div class="form-group ">
                <label for="numberinput">Enter N-no of rows or column of grid</label>
                <input id="numberinput" class="form-control-sm" type="number" name="inputN" value="<%= noOfGrid %>" required autocomplete="off" min="0">  <br>
              </div>
              <label for="colors">Pick Colors for your Grid</label>
              <div id="colors" class="form-row p-1">
                <div class="col">
                  <label for="color1">1st color:</label>
                  <input id="color1" class="form-control-sm" type="color" name="color1" required value="<%= colorPref[0] %>"><br>
                </div>
                <div class="col">
                  <label for="color2">2nd color:</label>
                  <input id="color2" class="form-control-sm" type="color" name="color2" required value="<%= colorPref[1] %>"><br>
                </div>
                <div class="col">
                  <label for="color3">3rd color:</label>
                  <input id="color3" class="form-control-sm" type="color" name="color3" required value="<%= colorPref[2] %>"><br>
                </div>
              </div>
              <div class="submit-btn m-3">
                <button class="btn" type="submit">Submit</button>
              </div>
            </form>

          </div>
        </div>

      </div>

    </div>
  </div>

  <script type="text/javascript">

      var x = document.getElementsByTagName("td")[0].getAttribute("value");

      var y = document.getElementsByTagName("tr");

      var z = document.getElementsByTagName("td");

      console.log(y);

